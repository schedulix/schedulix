JAY = $(SDMSHOME)/tools/bin/jay
SKELETON = $(SDMSHOME)/tools/lib/skeleton
JLEX = $(SDMSHOME)/tools/bin/jflex
AWK = /usr/bin/awk
SED = sed

JAVAC = javac -cp $(SDMSHOME)/src:$(SWTJAR):$(JNAJAR)
JAR = jar
JARCREATEFLAGS = cmf
JAVAH = javah

ifdef DEBUG
CXXFLAGS += -g3
JAVAC_FLAGS = -g
else
CXXFLAGS += -O3
JAVAC_FLAGS = -O
endif
JAY_FLAGS = -v

commonsubdirs:
	@for DIR in $(SUBDIRS); do \
		if [ $$DIR != "." ]; then \
			$(MAKE) -C $$DIR -$(MAKEFLAGS) all || exit; \
		fi; \
	done

commonclean:
	@for DIR in $(SUBDIRS); do \
		if [ $$DIR != "." ]; then \
			$(MAKE) -C $$DIR -$(MAKEFLAGS) clean || exit; \
		fi; \
	done
	rm -f *~ *.class 

commongensubdirs:
	@for DIR in $(SUBDIRS); do \
		if [ $$DIR != "." ]; then \
			$(MAKE) -C $$DIR -$(MAKEFLAGS) generate || exit; \
		fi; \
	done

%.class: %.java
	$(JAVAC) $(JAVAC_FLAGS) $< 

%.java: %.jay
	$(JAY) $(JAY_FLAGS) $< $(SKELETON) > $@
	egrep -e "^//yy" < $@ | sed 's!//yy!!' > parser.tables

%.java: %.jlex
	$(JLEX) -d /tmp $<
	$(SED) -e 's/zzCMapL\[zzInput\]/(((zzInput >= 0) \&\& (zzInput < zzCMapL.length)) ? zzCMapL\[zzInput\] : 0)/' /tmp/$@ >$@
	rm -f /tmp/$@

